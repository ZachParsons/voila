<!DOCTYPE html>
<html>
  <head>
    <title>Voila</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <nav class="purple darken-4">
    <div class="nav-wrapper">
        <ul class="left">
          <li><%= link_to "Voila", root_path %></li>
          <% if session[:user_id] == nil %>
            <li><%= link_to "Login", new_session_url %></li>
            <li><%= link_to "Register", new_user_url %></li>
          <% else %>
            <li><a href="/users/<%= session[:user_id] %>" ><%= current_user.stage_name %></a></li>
            <li><%= link_to "Logout", session_path(session), method: :delete %></li>
          <% end %>
          <li><%= link_to "Search", illusions_path %></li>
      </ul>
    </div>
  </nav>
    <%= yield %>
  </body>
</html>
