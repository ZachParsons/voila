<% if @errors %>
  <%= render 'shared/errors.html.erb', locals: {errors: @errors} %>
<% end %>

<%= form_for @illusion do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :url %>
  <%= f.text_field :url %>

  <%= f.label :tags %>
  <%= f.fields_for :tags do |t| %>
    <%= t.text_field :name %>
  <% end %>
  
  <% if current_user && current_user.master == true %>
    <%= f.radio_button :intense, checked: false %>
    <%= f.label :intense, "Intense? (this content is only available for master magicians)" %>
  <% end %>
  <%= f.submit %>
<% end %>
