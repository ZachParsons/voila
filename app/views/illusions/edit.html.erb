<%= form_for @illusion do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :url %>
  <%= f.text_field :url %>

  <%= f.label :tags %>
  <%= f.fields_for :tags do |t| %>
    <%= t.text_field :name %>
  <% end %>

  <%= f.radio_button :intense, checked: false %>
  <%= f.label :intense, "Intense? (this content is only available for master magicians)" %>
  <%= f.submit %>
<% end %>